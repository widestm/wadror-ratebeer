
<h1>Listing breweries</h1>
<p>Number of breweries: <%= @breweries.count %></p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) , class:"btn btn-primary"%></td>
        <td><%= link_to 'Delete', brewery, method: :delete, data: { confirm: "Are you sure you want to delete \'#{brewery.name}\'?" } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brewery', new_brewery_path, class:"btn btn-success"%>
</br>