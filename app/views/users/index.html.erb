<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers </th>
      <th> total ratings </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td>
          <% if is_admin_view and user.frozen_account? %>
 <button class="btn btn-primary" disabled="disabled"> <%="account frozen"%> </button>          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

