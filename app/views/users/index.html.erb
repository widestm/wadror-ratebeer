
<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td>
        <% if user.frozen_account && is_admin_view %>
        <button class="btn btn-primary" disabled="disabled"> <%="account frozen"%> </button>
        <% end %>
      </td>
      <td><%= link_to 'Show', user , class:"btn btn-primary"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , class:"btn btn-success"%>
